# Production Environment Variables for Nuxt.js Frontend
# WARNING: Do not commit this file to version control
# Copy this file to .env.production and update with your production values

# API Configuration
NUXT_PUBLIC_API_BASE_URL=https://your-domain.com/api

# Application Configuration
NUXT_APP_BASE_URL=https://your-frontend-domain.com
NUXT_APP_NAME=Trading Journal System
NUXT_APP_VERSION=1.0.0

# Security Configuration
NUXT_SECURITY_CSP_ENABLED=true
NUXT_SECURITY_CORS_ORIGIN=https://your-domain.com

# Analytics and Monitoring
NUXT_GTAG_ID=GA_MEASUREMENT_ID
NUXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance Configuration
NUXT_BUILD_ANALYZE=false
NUXT_EXPERIMENTAL_PAYLOAD_EXTRACTION=false

# CDN Configuration (if using)
NUXT_APP_CDN_URL=https://cdn.your-domain.com

# Feature Flags
NUXT_PUBLIC_ENABLE_ANALYTICS=true
NUXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NUXT_PUBLIC_ENABLE_EXPORT=true
NUXT_PUBLIC_ENABLE_RISK_ANALYTICS=true

# Theme Configuration
NUXT_PUBLIC_DEFAULT_THEME=light
NUXT_PUBLIC_THEME_SWITCHING_ENABLED=true

# File Upload Configuration
NUXT_PUBLIC_MAX_FILE_SIZE=10485760
NUXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Caching Configuration
NUXT_NITRO_STORAGE=redis://your-redis-url
NUXT_NITRO_PRESET=node-server